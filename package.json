{
  "name": "bookmaster-pos",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "description": "BookMaster POS System",
  "author": "BookMaster Team",
  "build": {
    "appId": "com.bookmaster.pos",
    "productName": "BookMaster POS",
    "files": [
      "build/**/*",
      "electron/**/*",
      "data/**/*",
      "src/services/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-pack": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "electron": "^39.2.7",
    "googleapis": "^169.0.0",
    "lucide-react": "^0.562.0",
    "node-cron": "^4.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "react-scripts": "^5.0.1",
    "recharts": "^3.6.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "wait-on": "^9.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}